<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarProducto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgAtrasForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/imgAtras"
                android:minWidth="32dp"
                android:minHeight="48dp"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/imgTituloForm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/imgTienda" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtFormulario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/agregarProducto"
                android:textColor="#656565"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imgAgregar"
                    android:layout_width="128dp"
                    android:layout_height="127dp"
                    android:contentDescription="@string/imgAgregar"
                    app:srcCompat="@drawable/carrito"
                    tools:ignore="ImageContrastCheck" />

                <EditText
                    android:id="@+id/insNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint="@string/insAgregarNombre"
                    android:inputType="textPersonName"
                    android:textColorHint="#757575"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/insDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint="@string/insAgregarDescripcion"
                    android:inputType="textPersonName"
                    android:textColorHint="#757575"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/insPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint="@string/insAgregarPrecio"
                    android:inputType="number"
                    android:textColorHint="#757575"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtIDAct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#656565"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/botonAgregar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/botonAgregar" />

                    <Button
                        android:id="@+id/btnActualizar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Actualizar" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>