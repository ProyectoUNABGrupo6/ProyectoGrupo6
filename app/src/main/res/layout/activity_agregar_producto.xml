<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarProducto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAtrasAddP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="@string/imgAtras"
                android:focusable="true"
                app:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/baseline_arrow_back"
                tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/txtUsuProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtFormulario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/agregarProducto"
                android:textColor="#656565"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imgAgregar"
                    android:layout_width="128dp"
                    android:layout_height="127dp"
                    android:contentDescription="@string/imgAgregar"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24"
                    tools:ignore="ImageContrastCheck" />

                <EditText
                    android:id="@+id/insNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint="@string/insAgregarNombre"
                    android:inputType="textPersonName"
                    android:textColorHint="#757575"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/insDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint="@string/insAgregarDescripcion"
                    android:inputType="textPersonName"
                    android:textColorHint="#757575"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/insCatProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint="@string/categoria"
                    android:inputType="textPersonName"
                    android:textColorHint="#757575"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/insPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:ems="10"
                    android:hint="@string/insAgregarPrecio"
                    android:inputType="number"
                    android:textColorHint="#757575"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtIDAct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#656565"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/botonAgregar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:contentDescription="@string/agregar"
                        android:focusable="true"
                        app:backgroundTint="#00FFFFFF"
                        app:srcCompat="@drawable/ic_baseline_check_2"
                        tools:ignore="ImageContrastCheck" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnActualizar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        android:contentDescription="@string/Actualizar"
                        android:focusable="true"
                        app:backgroundTint="#00FFFFFF"
                        app:srcCompat="@drawable/baseline_upload"
                        tools:ignore="ImageContrastCheck" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>