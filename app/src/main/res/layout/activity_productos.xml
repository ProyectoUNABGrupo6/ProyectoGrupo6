<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productos">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fresa"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/fresa"
                app:srcCompat="@drawable/fresa" />

            <TextView
                android:id="@+id/txtFresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fresa"
                android:textColor="#FD0101"
                android:textSize="34sp" />

            <Button
                android:id="@+id/botonProducto1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/botonProductos"
                tools:ignore="DuplicateSpeakableTextCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/mango"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/mango"
                app:srcCompat="@drawable/mango" />

            <TextView
                android:id="@+id/txtProducto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mango"
                android:textColor="#EF6C00"
                android:textSize="34sp" />

            <Button
                android:id="@+id/botonProducto2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/botonProductos" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/piÃ±a"
                android:layout_width="50dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:contentDescription="@string/pina"
                app:srcCompat="@drawable/frutita" />

            <TextView
                android:id="@+id/txtProducto3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pina"
                android:textColor="#689F38"
                android:textSize="34sp" />

            <Button
                android:id="@+id/botonProducto3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/botonProductos" />
        </LinearLayout>

        <Button
            android:id="@+id/botonCerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cerrarSesion" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>