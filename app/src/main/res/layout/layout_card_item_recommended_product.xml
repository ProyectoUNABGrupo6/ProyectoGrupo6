<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/cardItemRecommendedProductImage"
            android:layout_width="103dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/imgProduct"
            android:src="@drawable/img_logo" />

        <RelativeLayout
            android:id="@+id/cardItemRecommendedProductRl"
            android:layout_width="276dp"
            android:layout_height="110dp"
            android:layout_gravity="end"
            android:padding="10dp">

            <TextView
                android:id="@+id/cardItemRecommendedProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/san_francisco"
                android:text="@string/layoutCardItemProductName"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cardItemRecommendedProductRating"
                android:layout_width="120dp"
                android:layout_height="18dp"
                android:layout_below="@id/cardItemRecommendedProductName"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/rating"
                android:src="@drawable/rating_orange_small"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/cardItemRecommendedProductDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardItemRecommendedProductRating"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/san_francisco"
                android:text="@string/layoutCardItemProductDetails"
                android:textColor="#2e2e2e"
                android:textSize="14sp" />

            <Button
                android:id="@+id/cardItemRecommendedProductButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/cardItemRecommendedProductRating"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="@font/san_francisco"
                android:text="@string/layoutCardItemProductBotton"
                android:textColor="#212121"
                android:textSize="11sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>