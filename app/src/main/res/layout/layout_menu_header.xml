<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/menuHeaderImgProfile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true"
        android:src="@drawable/ic_menu_header_img_profile"/>
    
    <TextView
        android:id="@+id/menuHeaderViewSupporter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/menuHeaderImgProfile"
        app:layout_constraintEnd_toEndOf="@id/menuHeaderImgProfile"
        app:layout_constraintStart_toStartOf="@id/menuHeaderImgProfile"
        app:layout_constraintTop_toTopOf="@id/menuHeaderImgProfile"/>

    <TextView
        android:id="@+id/menuHeaderNameProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/menuHeaderViewSupporter"
        app:layout_constraintStart_toEndOf="@id/menuHeaderImgProfile"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/menuHeaderName"
        />

    <TextView
        android:id="@+id/menuHeaderVerifiedProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/menuHeaderVerified"
        android:textColor="#2E7D32"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/menuHeaderImgProfile"
        app:layout_constraintTop_toBottomOf="@id/menuHeaderViewSupporter" />

</androidx.constraintlayout.widget.ConstraintLayout>